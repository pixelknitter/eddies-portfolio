---
import Layout from '@layouts/Layout.astro';
import Prose from '@components/Prose.astro'

import {Content as About, frontmatter as aboutMatter} from '../static/about.md';
import { Image } from "astro:assets";
const SKILL_SIZE = 46;

const { title: pageTitle, badges, subject } = aboutMatter;
---
<Layout pageTitle={pageTitle}>
    <div class="my-5 text-center">
        <Image width="300" height="259" class="mx-auto" alt="RaccoonSpaceGif" src="/space.webp"/>
    </div>
    <h1 class="font-header text-[2.6rem] mb-1">{subject}</h1>
    <div class="flex flex-wrap">
        {badges.map((badge: string) => <span class="bg-tag text-text rounded-md font-body font-semibold text-[0.85rem] mx-1 my-2 px-2 py-1 whitespace-nowrap place-content-center">{badge}</span> )}
    </div>
    <Prose>
        <About />
    </Prose>
    <h2>My Building Blocks</h2>
    <p>As a product developer, how I build is ever-changing, but below are a good number of blocks that make up what I build.</p>
        <!-- https://devicon.dev/ for more -->
    <h3>Languages</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" alt="TypeScript" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/typescript/typescript-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="JavaScript" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="CSS" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/css3/css3-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="HTML" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/html5/html5-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Kotlin" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/kotlin/kotlin-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Swift" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/swift/swift-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Python" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/python/python-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Bash" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/bash/bash-original.svg" />
        </div>
    <h3>Frameworks</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="React" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/react/react-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="NextJS" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nextjs/nextjs-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Astro" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Tailwind" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Jamstack" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/jamstack/jamstack-original.svg" />
        </div>
    <h3>Platforms</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="OpenAI" src="https://www.cdnlogo.com/logos/o/38/openai.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Android" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/android/android-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="iOS" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/apple/apple-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Expo" src="/expo.svg" />
        </div>
    <h3>Tools</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Jest" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/jest/jest-plain.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Gradle" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/gradle/gradle-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Mobx" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mobx/mobx-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Sanity" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/sanity/sanity-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Storybook" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/storybook/storybook-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Figma" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/figma/figma-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="VSCode" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vscode/vscode-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Yarn" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/yarn/yarn-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Git" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/git/git-original.svg"/>
        </div>
    <h3>Infrastructure</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Cloudflare" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/cloudflare/cloudflare-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Vercel" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vercel/vercel-original-wordmark.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Amazon Web Services" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/amazonwebservices/amazonwebservices-original-wordmark.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Postgresql" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/postgresql/postgresql-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Github" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/github/github-original.svg"/>
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Github Actions" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/githubactions/githubactions-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Drop Wizard" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/dropwizard/dropwizard-original.svg" />
        </div>
    <h3>Analytics</h3>
        <div class="flex justify-start flex-wrap mt-2">
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Sentry" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/sentry/sentry-original.svg" />
            <img class="w-12 h-12 m-1 bg-tag text-text rounded-md p-1.5" width={SKILL_SIZE} height={SKILL_SIZE} alt="Open Telemetry" src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/opentelemetry/opentelemetry-original.svg" />
        </div>
</Layout>

