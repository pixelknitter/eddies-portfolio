---
const description = "404";
import Hero from "@components/Hero.astro";
import Layout from '@layouts/Layout.astro';
---
<Layout pageTitle={description}>
    <div class="text-center mt-24">
        <Hero alt="Raccoon404Gif" src="/404.webp"/>
        <h1 class="text-8xl m-0 tracking-widest">{description}</h1>
        <p class="text-gray-500 dark:text-gray-400">It seems like you've wandered into the wrong forest!</p>
        <p>
            <a class="text-button hover:underline" href="/">Return Home</a>
        </p>
    </div>
</Layout>