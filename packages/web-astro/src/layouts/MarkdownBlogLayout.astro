---
import BaseLayout from './Layout.astro';
import type { BlogPost } from '../content/config'
import Hero from "@components/Hero.astro";
interface Props {
    frontmatter: BlogPost;
}

const { frontmatter } = Astro.props;
const { title, tags, author } = frontmatter;
---
<BaseLayout pageTitle={title}>
    <Hero alt="RaccoonLaptopGif" src="/laptop.webp"/>
    <h2>{title}</h2>
    <ul class="badge__list">
        {tags.map((tag: string) => {
            <li><span class="badge badge--item">{tag}</span></li>
        })}
    </ul>
    <span class="font-semibold text-sm dark:text-violet-400 text-violet-600">{author.id}</span>
    <slot />
</BaseLayout>

