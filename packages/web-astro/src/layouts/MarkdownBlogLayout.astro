---
import { Image } from "astro:assets";
import BaseLayout from './Layout.astro';
import type { BlogPost } from '../content/config'
interface Props {
    frontmatter: BlogPost;
}

const { frontmatter } = Astro.props;
const { title, tags, author } = frontmatter;
---
<BaseLayout pageTitle={title}>
    <div class="gif">
        <Image width="300" height="259" alt="RaccoonLaptopGif" src="/laptop.webp"/>
    </div>
    <h2>{title}</h2>
    <ul class="badge__list">
        {tags.map((tag) => {
            <li><span class="badge badge--item">{tag}</span></li>
        })}
    </ul>
    <span class="font-semibold text-sm dark:text-violet-400 text-violet-600">{author.name}</span>
    <slot />
</BaseLayout>

